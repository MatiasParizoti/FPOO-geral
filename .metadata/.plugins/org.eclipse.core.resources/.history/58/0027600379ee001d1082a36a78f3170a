import java.util.Scanner;

public class Media {
	
	String[] valores1 = {"Daniel","Ana","Matheus","João","Renan","Marcelo","Gustavo","Rafael","Kayque","Samuel"};
	float[] notas = new float[10];
	Scanner objScanner = new Scanner(System.in);
	
		public void NomeAlunos() {
		
		
		for(int indice = 0; indice < valores1.length; indice++) {
			
			System.out.println((indice + 1) +"º NOME ALUNO(A):" + valores1[indice]);
			
			
			System.out.println("NOTAS DO ALUNO(A):" + valores1[indice]);
			int cont = 0;
			while(cont < 10) {
				
				System.out.println("DIGITE A :" + (cont + 1) + "º NOTA");
				notas[cont] = objScanner.nextFloat();
				cont++;
				

				
			}
			
		}
		System.out.println("LISTAGEM DE NOTAS:");
		int cont = 0;
		while(cont < notas.length) {
			
			
			System.out.println((cont + 1) +"º NOTAS: " + notas[cont]);
			cont++;
		}
		
		System.out.println("TOTAL DE valores1: " + valores1.length);
		
		
	}

}
